read two numbers and print 1 for addition ,2 for subtraction,3 for multiplication,4 for division ny using switch case
  #include <stdio.h>

int main()
{
    
    int a,b;
     scanf("%d%d",&a,&b);
     int ch;
     scanf("%d",&ch);
     switch(ch)
     {
         case 1:
                printf("%d",a+b);
        break;
        case 2:
                printf("%d",a-b);
        break;
        case 3:
                printf("%d:",a*b);
        break;
        case 4:
               printf("%d",a/b);
        break;
        defalut:
               printf("invalid choice");
        
     }
    
    return 0;
}
